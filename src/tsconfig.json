  "compilerOptions": {
    "outDir": "dist",

    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "../node_modules/@types"],
    "types": ["node", "express"]
  }
}
